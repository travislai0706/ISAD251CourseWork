@model IEnumerable<KungFuTea.Models.ViewModels.Cart.CartViewModel>

@{
    ViewBag.Title = "Cart Details";
    int count = 1;
}

<h2 align="center">Cart Details</h2>

@if (ViewBag.Message != null)
{
    <h3>@ViewBag.Message</h3>
}
else
{
    <table class="table">
        <tr>
            <th style="text-align:center">
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th>

            </th>
            <th>
                Total
            </th>
            <th>

            </th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td class="qty@(item.ItemId)">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="/Images/@item.Image" width="80" height="80"/>
            </td>
            <td>
                <a href="#" class="incrproduct" data-id="@item.ItemId">+</a>
                <a href="#" class="decrproduct" data-id="@item.ItemId">-</a>
                <a href="#" class="removeproduct" data-id="@item.ItemId">Remove</a>
            </td>
            <td class="total@(item.ItemId)">
                $@Html.DisplayFor(modelItem => item.Total)
            </td>
        </tr>
    }

        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="grandtotal"><b>Grand total</b> $<span>@ViewBag.GrandTotal</span></td>
        </tr>

    </table>

    <a href="#" class="placeorder btn btn-primary">Checkout</a>

}

@section Scripts {
<script>

$(function () {

    /*
    * Increment product
    */

    $("a.incrproduct").click(function (e) {
        e.preventDefault();

        var itemId = $(this).data("id");
        var url = "/cart/IncrementProduct";

        $.getJSON(url, { itemId: itemId }, function (data) {

            $("td.qty" + itemId).html(data.qty);

            var price = data.qty * data.price;
            var priceHtml = "$" + price.toFixed(2);

            $("td.total" + itemId).html(priceHtml);

            var gt = parseFloat($("td.grandtotal span").text());
            var grandtotal = (gt + data.price).toFixed(2);

            $("td.grandtotal span").text(grandtotal);
        }).done(function (data) {
            var url2 = "/cart/PaypalPartial";

            $.get(url2, { }, function (data) {
                $('div.paypaldiv').html(data);
            });
        });
    });

    //////////////////////////////////////////////////////////////

    /*
    * Decrement product
    */

    $("a.decrproduct").click(function (e) {
        e.preventDefault();

        var $this = $(this);
        var itemId = $(this).data("id");
        var url = "/cart/DecrementProduct";

        $.getJSON(url, { itemId: itemId }, function (data) {
            if (data.qty == 0) {
                $this.parent().parent().fadeOut("fast", function () {
                    location.reload();
                });
            }
            else {
                $("td.qty" + itemId).html(data.qty);

                var price = data.qty * data.price;
                var priceHtml = "$" + price.toFixed(2);

                $("td.total" + itemId).html(priceHtml);

                var gt = parseFloat($("td.grandtotal span").text());
                var grandtotal = (gt - data.price).toFixed(2);

                $("td.grandtotal span").text(grandtotal);
            }

        }).done(function (data) {
            var url2 = "/cart/PaypalPartial";

            $.get(url2, {}, function (data) {
                $('div.paypaldiv').html(data);
            });
        });
    });

    //////////////////////////////////////////////////////////////

    /*
    * Remove product
    */

    $("a.removeproduct").click(function (e) {
        e.preventDefault();

        var $this = $(this);
        var itemId = $(this).data("id");
        var url = "/cart/RemoveProduct";

        $.get(url, { itemId: itemId }, function (data) {
            location.reload();
        });
    });

    //////////////////////////////////////////////////////////////

    /*
    * Place order
    */

    $("a.placeorder").click(function (e) {
        e.preventDefault();

        var $this = $(this);

        var url = "/cart/PlaceOrder";

        $(".ajaxbg").show();

        $.post(url, { }, function (data) {
            $(".ajaxbg span").text("Thank you. You will now be redirected to paypal.");
            setTimeout(function () {
                $('form input[name="submit"]').click();
            }, 2000);
        });
    });

    //////////////////////////////////////////////////////////////

});

</script>

}